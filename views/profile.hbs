<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../styleP.css" />
    <title>Mon profil</title>
  </head>
  <body background-image= url("../images/bg-profile.jpg") class="pbody">
    <nav>
      <h4><a href="/" class="link">Menu Principal</a></h4>
      <ul>
        <li><a href="/auth/logout" class="link">Se d√©connecter</a></li>
      </ul>
    </nav>

    <div class="container mt-4">
      <div class="row">
        <div class="col-4">
          <div class="card card-p my-3">
            <div class="avatar-ctn rounded-pill">
              <img
                src="../images/avatar.png"
                class="avatar"
                alt="user profile picture"
              />
            </div>
            <div class="card-body">
              <h5
                class="card-title d-flex justify-content-center"
              >{{user.username}}</h5>
              <p class="card-text">
                <a
                  href="#"
                  class="btn btn-primary d-flex justify-content-center"
                >{{user.email}}</a>
              </p>
            </div>
          </div>
        </div>

        <div class="col-8 my-3">
          <div class="card text-center PP d-flex justify-content-center">
            <div class="d-flex flex-row card-header justify-content-between align-items-center">
              <div>
                Liste favoris
              </div>
              <div>
              <script>
                function clear_favourite() {
                  window.location = `/favourites/clear`;
                }
              </script>
              <button
                onclick="clear_favourite()"
                type="button"
                class="btn btn-outline"
                title="Supprimer tous les favoris"
              >
              <i class="bx bx-trash bx-sm"></i>
              </button>
              </div>
              
            </div>
            <div>
              {{#if favs}}
                {{#each favs}}
                  <div><a href="/weather/{{this.name}}/{{this.country_code}}/{{this.lat}}/{{this.lon}}">{{this.name}}, {{this.country_code}}, ({{this.lat}}, {{this.lon}})</a></div>
                {{/each}}
              {{else}}
                <div>Aucun favori !</div>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

    </div>

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />
  </body>
</html>