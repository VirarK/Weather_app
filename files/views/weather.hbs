					<script>
						function new_fav() {
							window.location = `/favourites/{{city}}/{{country_code}}/{{lat}}/{{lon}}`;
						}
					</script>
					{{#if user}}
						<button
							onclick="new_fav()"
							class="btn btn-outline favoris"
							title="Cliquez pour ajouter au favoris"
						>
						<i class="bx bxs-star bx-sm" style="color: rgb(231, 185, 85)">
						</i>
						</button>
					{{/if}}
					</div>
				</div>
